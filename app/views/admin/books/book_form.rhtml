form label, form input, form textarea, form select {
	display: block;
	float: left;
	margin-bottom: 10px;
	font-size: .9em;
	font-family: Arial, Helvetica, sans-serif;
	vertical-align: bottom;
	}

form label {
	text-align: right;
	width: 125px;
	padding-right: 20px;
	}	
		
form select {
    width: 150px;
    height: 80px;
}
form br {
    clear: left;
    }	

form div.selectbox {
    float: left;
}